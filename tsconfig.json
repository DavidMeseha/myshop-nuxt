{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler", // Nuxt 3+ uses "bundler" for Nitro
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["@nuxt/types", "@types/node"]
  }
}
